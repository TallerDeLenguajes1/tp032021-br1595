@{
    ViewData["Title"] = "View";
}
@model EntidadesSistema.PedidoViewModel

<h4>Crear Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller = "Pedido" asp-action="AgregarPedido" method="post">
            <div class="form-group">
                <label asp-for="@Model.Pedido.Observacion" class="control-label"></label>
                <input asp-for="@Model.Pedido.Observacion" name="Observacion" class="form-control" required/>
            </div>
            <div class="form-group">
                <select  for="@Model.Pedido.CodigoCadete" class="custom-select" name="CadeteID" style="text-align:center">
                    @foreach (var elemento in Model.Cadetes)
                    {
                        <option value="@elemento.Id" >@elemento.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Solicitar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>
