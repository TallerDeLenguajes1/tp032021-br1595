@model List<EntidadesSistema.UsuarioViewModel>
<div class="text-center">
    <h2 class="display-4">Listado de usuarios</h2>
</div>

<div class="text-center">
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Nivel Autorización</th>
        </tr>
        @foreach (var elemento in Model)
        {
            <tr>
                <td>@elemento.UsuarioID</td>
                <td>@elemento.Nombre</td>
                <td>@elemento.Email</td>
                <td>@elemento.Clearance</td>
            </tr>     
        }
    </table>
</div>