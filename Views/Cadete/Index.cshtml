@model List<EntidadesSistema.Cadete>
<div class="text-center">
    <h2 class="display-4">Listado de cadetes</h2>
</div>
<a type="button" asp-action="AltaCadete" class="btn btn-primary">Dar Alta Cadete</a>

<div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Cantidad de pedidos</th>
        </tr>
        @foreach (var elemento in Model)
        {
            <tr>
                <td>@elemento.Id</td>
                <td>@elemento.Dni</td>
                <td>@elemento.Nombre</td>
                <td>@elemento.Direccion</td>
                <td>@elemento.ListadoPedidos.Count</td>
                <td>
                    <a button type="button" class="btn btn-secondary btn-sm" href="../Cadete/DeleteCadete?id=@elemento.Id">Eliminar</a>
                    <a button type="button" class="btn btn-secondary btn-sm" href="../Cadete/DeleteCadete?id=@elemento.Id">Dar Pedido</a>
                </td>
            </tr>
        }
    </table>
</div>