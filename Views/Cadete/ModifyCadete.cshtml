@model EntidadesSistema.CadeteViewModel

@{
    ViewData["Title"] = "ModifyForGoodCadete";
}


<h4>Modificar Cadete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller = "Cadete" asp-action="ModifyForGoodCadete" method="post">
            <div class="form-group">
                <input readonly hidden asp-for="@Model.Cadete.Id" name="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cadete.Nombre"  class="control-label"></label>
                <input asp-for="@Model.Cadete.Nombre" name="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cadete.Direccion" class="control-label"></label>
                <input asp-for="@Model.Cadete.Direccion" name="Direccion" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cadete.Telefono" class="control-label"></label>
                <input asp-for="@Model.Cadete.Telefono" name="Telefono" class="form-control" />
            </div>
            <div class="form-group">
                <label for="CadeteriaId" class="form-label">Código de cadetería actual: @Model.Cadete.CadeteriaId</label>
                <select for="CadeteriaId" class="custom-select" name="CadeteriaId" style="text-align:center">
                    @foreach (var elemento in Model.ListaCadeterias)
                    {
                        <option value="@elemento.CadeteriaID">@elemento.CadeteriaNombre - @elemento.CadeteriaID</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
